{
	"name": "clippo",
	"version": "0.0.1",
	"description": "Package your extension for multiple browsers quickly and easily",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "dist/main.js",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"exports": {
		"./types": "./dist/main.d.ts",
		".": "./dist/main.js"
	},
	"scripts": {
		"build": "vite build",
		"dev": "pnpm build && pnpm preview",
		"example": "node examples/main.js $@",
		"lint": "eslint . --ext .ts",
		"preview": "node dist/main.js $@",
		"test": "vitest run",
		"watch": "vitest watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/clippo",
		"directory": "packages/clippo"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"license": "GPL-3.0",
	"homepage": "https://clippo.pigeonposse.com/",
	"devDependencies": {
		"@clack/core": "^0.3.4",
		"@clack/prompts": "^0.7.0",
		"@clippo/config": "workspace:*",
		"@topcli/spinner": "2.1.2",
		"@types/archiver": "6.0.2",
		"@types/columnify": "^1.5.4",
		"@types/figlet": "1.5.8",
		"@types/gradient-string": "1.1.6",
		"@types/inquirer": "9.0.7",
		"@types/js-yaml": "4.0.9",
		"@types/node": "20.11.19",
		"@types/node-localstorage": "^1.3.3",
		"@types/update-notifier": "6.0.8",
		"@types/yargs": "17.0.32",
		"ajv": "8.12.0",
		"boxen": "7.1.1",
		"chalk": "5.3.0",
		"figlet": "1.7.0",
		"gradient-string": "2.0.2",
		"is-unicode-supported": "^2.0.0",
		"js-yaml": "4.1.0",
		"open": "10.1.0",
		"pino": "8.18.0",
		"pino-pretty": "10.3.1",
		"table": "6.8.2",
		"terminal-image": "2.0.0",
		"terminal-link": "3.0.0",
		"toml": "3.0.0",
		"update-notifier": "7.0.0",
		"y18n": "5.0.8",
		"yargs": "17.7.2"
	},
	"dependencies": {
		"columnify": "^1.6.0",
		"enquirer": "^2.4.1",
		"listr2": "^8.2.1",
		"node-localstorage": "^3.0.5",
		"picocolors": "^1.0.0"
	}
}
